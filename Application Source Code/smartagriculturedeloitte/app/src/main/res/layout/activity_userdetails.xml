<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:background="@drawable/settingtextview"
        android:id="@+id/user_login_photo"
        android:layout_width="177dp"
        android:layout_height="173dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="403dp"
        android:outlineAmbientShadowColor="#00857E7E"
        android:outlineSpotShadowColor="#00968989"
        android:textAlignment="center" />

    <TextView
        android:gravity="start"
        android:id="@+id/user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="190dp"
        android:textAlignment="textStart"
        android:textColor="@color/deloitteBlack"
        android:textSize="17sp" />

    <TextView
        android:gravity="center"
        android:id="@+id/user_login_mail"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="233dp"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:textColor="@color/deloitteBlack"
        android:textSize="22sp" />

    <TextView
        android:gravity="center"
        android:id="@+id/user_login_name"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="285dp"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:textColor="@color/deloitteBlack"
        android:textSize="22sp" />

    <Button
        android:id="@+id/edit_user_photo"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="375dp"
        android:background="@drawable/editbutton_sector"
        android:text="Edit"
        android:textAlignment="center"
        android:textColor="@color/lightblue"
        android:textSize="12sp" />


</RelativeLayout>