<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/deloitteBlack"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/user_login_photo_nav"
        android:layout_width="106dp"
        android:layout_height="87dp"
        android:contentDescription="@string/nav_header_desc"
        app:srcCompat="@drawable/icon_logo" />

    <TextView
        android:id="@+id/user_login_name"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/user_login_name"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/user_login_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_login_mail"
        android:textAlignment="textEnd"
        android:textColor="@color/White" />

</LinearLayout>
